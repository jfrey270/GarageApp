<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageApp.UI.Views.AddVehiclePage"
             Title="Add Vehicle">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Entry x:Name="NameEntry" Placeholder="Name (optional)" />
            <Entry x:Name="MakeEntry" Placeholder="Make" />
            <Entry x:Name="ModelEntry" Placeholder="Model" />
            <Entry x:Name="YearEntry" Placeholder="Year" Keyboard="Numeric" />
            <Entry x:Name="ColorEntry" Placeholder="Color" />
            <Entry x:Name="EngineEntry" Placeholder="Engine" />
            <Entry x:Name="VinEntry" Placeholder="VIN (optional)" />
            <Entry x:Name="MilesEntry" Placeholder="Miles (optional)" Keyboard="Numeric" />
            <Entry x:Name="PhotoPathEntry" Placeholder="Photo Path (optional)" />
            <Entry x:Name="TireSizeEntry" Placeholder="Tire Size (optional)" />
            <Button Text="Save Vehicle" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
